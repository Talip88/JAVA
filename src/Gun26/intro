class calisan{
  String adi;
  String soyadi;
  String tcno;
  int calisanId;
}

Calisan cal1=new Calisan();
cal1.adi="ismet";
cal1.soyadi="temur";
cal1.calisan=3;

ArrayList<Calisan> calisanlar=new ArrayList<>();
calisanlar.add(cal1);

